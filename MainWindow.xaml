<Window x:Class="RA2Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RA2Installer"
        xmlns:resx="clr-namespace:RA2Installer.Resources"
        mc:Ignorable="d"
        Title="{x:Static resx:Strings.WindowTitle}" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Width="640" Height="480">
        <!-- 页面容器 -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Width="640" Height="480"/>
        
        <!-- 第一页 -->
        <Grid x:Name="Page1" Width="640" Height="480">
            <!-- 动画显示控件 -->
            <Image x:Name="AnimationImage" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,75,0,0" Width="470"/>
            
            <!-- 语言切换按钮和退出按钮 -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,9,29">
                <Button Width="145" Height="42" Margin="0,0,0,0" Cursor="Hand" Click="ChineseSimplifiedButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                                <TextBlock Text="简体中文" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Width="145" Height="42" Margin="0,0,0,0" Cursor="Hand" Click="ChineseTraditionalButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                                <TextBlock Text="繁體中文" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Width="145" Height="42" Margin="0,0,0,85" Cursor="Hand" Click="EnglishButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                                <TextBlock Text="English" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="CancelButton" Width="145" Height="42" Cursor="Hand" Click="CancelButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                        <TextBlock Name="ButtonTextBlock" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
            </StackPanel>
        </Grid>
        
        <!-- 第二页 -->
        <Grid x:Name="Page2" Width="640" Height="480" Visibility="Collapsed">
            <!-- 第二页内容可以在这里添加 -->
            <TextBlock Text="第二页" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
            
            <!-- 按钮容器 -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,9,29">
                <Button x:Name="PreviousButton" Width="145" Height="42" Margin="0,0,0,0" Cursor="Hand" Click="PreviousButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                                <TextBlock Name="PreviousButtonTextBlock" Text="上一步" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="NextButton" Width="145" Height="42" Margin="0,0,0,0" Cursor="Hand" Click="NextButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                                <TextBlock Name="NextButtonTextBlock" Text="下一步" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="Page2CancelButton" Width="145" Height="42" Margin="0,0,0,0" Cursor="Hand" Click="CancelButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Image Name="bgImage" Source="Assets/nav_bkg0.jpg" Stretch="Fill"/>
                                <TextBlock Name="CancelButtonTextBlock" Text="取消" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bgImage" Property="Source" Value="Assets/nav_bkg1.jpg"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
